<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Proiect_MDP_Mobile.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!-- Titlu pentru Atelierul de Rachete de Tenis -->
            <Label
                Text="Atelier Rachete Tenis"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" 
            />

            <!-- Descriere pentru Atelierul de Rachete de Tenis -->
            <Label
                Text="Bine ați venit la atelierul nostru specializat în servicii și rachete de tenis. Oferim o gamă variată de servicii și rachete pentru a satisface nevoile tuturor jucătorilor de tenis."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Atelier specializat în servicii și rachete de tenis" 
            />

            <!-- Buton pentru a naviga la pagina cu lista de rachete -->
            <Button
                Text="Vizualizare Rachete"
                Clicked="OnViewRacketsClicked"
                HorizontalOptions="Fill" 
            />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
